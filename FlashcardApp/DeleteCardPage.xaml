<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashcardApp.DeleteCardPage">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <Label Text="Seçtiğin bir kartı silebilirsin." 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <Picker x:Name="CardsDropdown"
                    Title="Bir kart seçin..."
                    ItemDisplayBinding="{Binding Front}"
                    BackgroundColor="DimGray"/>
            
            <Button Text="Sil"
                    BackgroundColor="Green"
                    TextColor="White"
                    Clicked="OnDeleteClicked" />

            <Button Text="Geri Dön"
                    BackgroundColor="Red"
                    TextColor="White"
                    Clicked="OnReturnClicked" />

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>